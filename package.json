{
  "name": "servo-core",
  "version": "1.0.0",
  "description": "A PaaS to make developers happy.",
  "repository" : {
    "type": "git",
    "url": "https://github.com/dowjones/servo-core.git"
  },
  "contributors":["Chad Wintzer", "Fan Zhang", "Sameer Chauhan"],
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "test": "mocha --require should --require proxyquire --recursive --compilers js:babel/register",
    "coverage": "istanbul --include-all-sources=true cover _mocha",
    "style": "jscs lib/"
  },
  "dependencies": {
    "ansi-to-html": "^0.2.0",
    "async": "^1.4.0",
    "aws-sdk": "2.2.5",
    "babel": "^5.8.23",
    "babel-runtime": "^5.8.25",
    "body-parser": "^1.10.2",
    "bunyan": "^1.3.3",
    "bunyan-prettystream": "^0.1.3",
    "callback-timeout": "^0.1.0",
    "clone": "^0.1.17",
    "common-errors": "^0.4.18",
    "concat-stream": "^1.4.5",
    "dotenv-safe": "^2.2.0",
    "express": "^4.11.1",
    "file": "^0.2.2",
    "fstream": "^0.1.25",
    "hogan.js": "^3.0.2",
    "hyperquest": "^1.0.1",
    "ip": "^0.3.3",
    "lodash": "^2.4.1",
    "mkdirp": "^0.4.0",
    "moment": "^2.8.3",
    "mongodb": "^1.4.29",
    "npm": "^1.4.26",
    "parse-link-header": "^0.2.0",
    "request": "^2.53.0",
    "rimraf": "^2.2.6",
    "semver": "^5.1.0",
    "tar": "^0.1.19",
    "temp": "^0.8.1",
    "ws": "^0.4.31"
  },
  "devDependencies": {
    "hippie": "^0.3.0",
    "istanbul": "^0.3.14",
    "jscs": "^1.10.0",
    "mocha": "^1.18.2",
    "proxyquire": "^1.3.1",
    "should": "^1.2.2",
    "sinon": "^1.9.0",
    "supertest": "^0.15.0",
    "chai": "^3.0.0",
    "tingodb": "^0.3.4"
  },
  "jscsConfig": {
    "disallowEmptyBlocks": true,
    "disallowKeywordsOnNewLine": [
      "else"
    ],
    "disallowMultipleLineBreaks": true,
    "disallowMultipleLineStrings": true,
    "disallowNewlineBeforeBlockStatements": true,
    "disallowPaddingNewlinesInBlocks": true,
    "disallowQuotedKeysInObjects": true,
    "disallowSpaceAfterObjectKeys": true,
    "disallowSpacesInCallExpression": true,
    "disallowSpacesInsideArrayBrackets": "all",
    "disallowSpacesInsideObjectBrackets": "all",
    "disallowTrailingComma": true,
    "disallowYodaConditions": true,
    "maximumLineLength": 120,
    "requireBlocksOnNewline": true,
    "requireCamelCaseOrUpperCaseIdentifiers": true,
    "requireCapitalizedComments": true,
    "requireCapitalizedConstructors": true,
    "requireCommaBeforeLineBreak": true,
    "requireLineBreakAfterVariableAssignment": true,
    "requireMultipleVarDecl": "onevar",
    "requireSpaceAfterBinaryOperators": [
      "=",
      ",",
      "+",
      "-",
      "/",
      "*",
      "==",
      "===",
      "!=",
      "!=="
    ],
    "requireSpaceAfterKeywords": [
      "do",
      "for",
      "if",
      "else",
      "switch",
      "case",
      "try",
      "catch",
      "void",
      "while",
      "with",
      "return",
      "typeof",
      "function"
    ],
    "requireSpaceBeforeBinaryOperators": [
      "=",
      "+",
      "-",
      "/",
      "*",
      "==",
      "===",
      "!=",
      "!=="
    ],
    "requireSpaceBeforeBlockStatements": true,
    "requireSpaceBeforeKeywords": [
      "else",
      "while",
      "catch"
    ],
    "requireSpaceBeforeObjectValues": true,
    "requireSpaceBetweenArguments": true,
    "requireSpacesInConditionalExpression": {
      "afterTest": true,
      "beforeConsequent": true,
      "afterConsequent": true,
      "beforeAlternate": true
    },
    "requireSpacesInForStatement": true,
    "requireSpacesInNamedFunctionExpression": {
      "beforeOpeningCurlyBrace": true
    },
    "requireSpacesInAnonymousFunctionExpression": {
      "beforeOpeningRoundBrace": true,
      "beforeOpeningCurlyBrace": true
    },
    "validateIndentation": 2,
    "validateParameterSeparator": ", "
  },
  "jshintConfig": {
    "globals": {
      "before": true,
      "after": true,
      "beforeEach": true,
      "define": true,
      "describe": true,
      "expect": true,
      "it": true,
      "runs": true,
      "spyOn": true,
      "unescape": true,
      "waits": true,
      "waitsFor": true
    },
    "node": true,
    "browser": false,
    "eqeqeq": true,
    "evil": true,
    "expr": true,
    "freeze": true,
    "indent": 2,
    "latedef": "nofunc",
    "laxcomma": true,
    "noarg": true,
    "trailing": true,
    "undef": true,
    "white": true
  }
}
